    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run GUI",
            "type": "debugpy",
            "request": "launch",
            "module": "calculator.ui.gui"
        },
        {
            "name": "Run CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "calculator.ui.cli"
        },
        {
            "name": "Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "tests/",
                "-p",
                "test_*.py",
                "-v"
            ],
        },
        {
            "name": "Run GUI Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "tests/",
                "-p",
                "test_gui.py",
                "-v"
            ],
        },
        {
            "name": "Compute Test-Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "coverage",
            "args": [
                "run",
                "-m",
                "unittest",
                "discover",
                "-s",
                "tests/",
                "-p",
                "test_*.py",
                "-v"
            ],
        },
        {
            "name": "Test-Coverage Report",
            "type": "debugpy",
            "request": "launch",
            "module": "coverage",
            "args": [
                "report",
                "-m"
            ],
        },
        {
            "name": "Compile All .py Files",
            "type": "debugpy",
            "request": "launch",
            "module": "compileall",
            "args": [
                "calculator",
                "tests"
            ],
        },
    ]
}